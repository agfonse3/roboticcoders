@model RoboticCoders.ViewModels.Admin.EditUserViewModel

<h2>Editar usuario</h2>

<form asp-action="EditUser" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="FirstName">Nombres</label>
        <input asp-for="FirstName" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="LastName">Apellidos</label>
        <input asp-for="LastName" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Address">Direccion</label>
        <input asp-for="Address" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="City">Ciudad</label>
        <input asp-for="City" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Role">Rol</label>
        <select asp-for="Role" class="form-select">
            <option value="Admin">Admin</option>
            <option value="Docente">Docente</option>
            <option value="Estudiante">Estudiante</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
</form>
