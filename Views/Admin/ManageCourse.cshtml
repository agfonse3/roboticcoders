@model RoboticCoders.ViewModels.Admin.ManageCourseViewModel
@{
    var assignedCount = Model.Students.Count(s => !string.IsNullOrWhiteSpace(s.AssignedTeacherId));
}

<div class="manage-course-container">
    <div class="course-header" style="padding: 24px; border-radius: 10px; background: #2b6cb0; color: white; margin-bottom: 24px;">
        <h1 style="margin: 0;">Configurar curso</h1>
        <h2 style="font-size: 1.2rem; font-weight: normal; margin-top: 4px;">@Model.CourseTitle</h2>
    </div>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            Revisa la configuracion. Hay datos invalidos en docentes o asignaciones.
        </div>
    }

    <form method="post" asp-action="ManageCourse" class="row g-4">
        @Html.AntiForgeryToken()
        <input type="hidden" name="id" value="@Model.CourseId" />

        <div class="col-lg-4">
            <div class="card h-100">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">1) Docentes del curso</h4>
                </div>
                <div class="card-body">
                    <p class="text-muted">Selecciona uno o varios docentes para este curso.</p>

                    @if (Model.Teachers.Any())
                    {
                        @foreach (var teacher in Model.Teachers)
                        {
                            var isChecked = Model.SelectedTeacherIds.Contains(teacher.Id);
                            <div class="form-check mb-2">
                                <input class="form-check-input"
                                       type="checkbox"
                                       name="selectedTeacherIds"
                                       value="@teacher.Id"
                                       id="teacher_@teacher.Id"
                                       @(isChecked ? "checked" : "") />
                                <label class="form-check-label" for="teacher_@teacher.Id">@teacher.Email</label>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted mb-0">No hay docentes disponibles.</p>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <div class="card h-100">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">2) Estudiantes por docente</h4>
                </div>
                <div class="card-body">
                    <p class="text-muted">Cada estudiante se asigna a un solo docente dentro de este curso.</p>
                    <div class="quick-assign">
                        <div class="quick-assign-head">
                            <strong>Asignacion rapida</strong>
                            <span>@assignedCount / @Model.Students.Count asignados</span>
                        </div>
                        <div class="quick-assign-actions">
                            <select id="bulkTeacherSelect" class="form-select form-select-sm">
                                <option value="">Selecciona docente...</option>
                                @foreach (var teacher in Model.Teachers)
                                {
                                    <option value="@teacher.Id">@teacher.Email</option>
                                }
                            </select>
                            <button type="button" class="btn btn-sm btn-outline-primary" onclick="applyBulkAssign('all')">Asignar a todos</button>
                            <button type="button" class="btn btn-sm btn-outline-secondary" onclick="applyBulkAssign('unassigned')">Solo sin asignar</button>
                            <button type="button" class="btn btn-sm btn-outline-danger" onclick="clearAllAssignments()">Limpiar todo</button>
                        </div>
                    </div>

                    <div style="max-height: 460px; overflow-y: auto;">
                        <table class="table table-sm align-middle">
                            <thead>
                                <tr>
                                    <th>Estudiante</th>
                                    <th>Docente asignado</th>
                                    <th>Progreso</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var student in Model.Students)
                                {
                                    <tr>
                                        <td>@student.StudentEmail</td>
                                        <td>
                                            <select class="form-select form-select-sm student-teacher-select"
                                                    data-current="@student.AssignedTeacherId"
                                                    name="studentTeacherAssignments[@student.StudentId]">
                                                <option value="">-- Sin asignar --</option>
                                                @foreach (var teacher in Model.Teachers)
                                                {
                                                    var selected = student.AssignedTeacherId == teacher.Id;
                                                    if (selected)
                                                    {
                                                        <option value="@teacher.Id" selected>@teacher.Email</option>
                                                    }
                                                    else
                                                    {
                                                        <option value="@teacher.Id">@teacher.Email</option>
                                                    }
                                                }
                                            </select>
                                        </td>
                                        <td>@student.ProgressPercent%</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0">3) Modulos y lecciones</h4>
                </div>
                <div class="card-body">
                    <p class="mb-3">Crea los modulos del curso y luego sus lecciones con diapositivas y video opcional.</p>
                    <a class="btn btn-outline-primary"
                       asp-controller="AdminCourse"
                       asp-action="Modules"
                       asp-route-id="@Model.CourseId">
                        Ir al gestor de modulos y lecciones
                    </a>
                </div>
            </div>
        </div>

        <div class="col-12 d-flex gap-2">
            <button type="submit" class="btn btn-primary btn-lg">Guardar configuracion</button>
            <a href="/Admin/Dashboard" class="btn btn-secondary btn-lg">Cancelar</a>
        </div>
    </form>
</div>

<style>
    .manage-course-container {
        max-width: 1200px;
        margin: 40px auto;
        padding: 0 20px;
    }

    .card {
        border: none;
        box-shadow: 0 2px 8px rgba(0, 0, 0, .1);
    }

    .quick-assign {
        border: 1px solid #d7e2f1;
        border-radius: 10px;
        padding: 12px;
        background: #f7faff;
        margin-bottom: 12px;
    }

    .quick-assign-head {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 8px;
        color: #1f3b70;
    }

    .quick-assign-actions {
        display: grid;
        grid-template-columns: minmax(200px, 1fr) auto auto auto;
        gap: 8px;
        align-items: center;
    }

    @@media (max-width: 992px) {
        .quick-assign-actions {
            grid-template-columns: 1fr 1fr;
        }
    }
</style>

<script>
    function applyBulkAssign(mode) {
        const teacherId = document.getElementById('bulkTeacherSelect').value;
        if (!teacherId) return;

        const selects = document.querySelectorAll('.student-teacher-select');
        selects.forEach(select => {
            const current = select.value;
            if (mode === 'all' || (mode === 'unassigned' && !current)) {
                select.value = teacherId;
            }
        });
    }

    function clearAllAssignments() {
        const selects = document.querySelectorAll('.student-teacher-select');
        selects.forEach(select => select.value = '');
    }
</script>
