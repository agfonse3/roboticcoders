@model RoboticCoders.Models.Course

@{
    ViewData["Title"] = Model.Title;
}

<section class="course-details">
    <div class="course-details-card">

        <img src="@Model.ImageUrl"
             alt="@Model.Title"
             class="course-details-image" />

        <div class="course-details-content">
            <h1>@Model.Title</h1>

            <p class="course-details-description">
                @Model.Description
            </p>

            <div class="course-details-actions">
                <a asp-controller="Course"
   asp-action="Index"
   class="btn-back">
    ← Volver a cursos
</a>


                <a asp-controller="Home"
                   asp-action="Login"
                   class="btn-primary">
                    Inscribirse
                </a>
            </div>

            <div class="course-modules mt-4">
                <h3>Módulos</h3>
                @if (Model.Modules != null && Model.Modules.Any())
                {
                    <div class="accordion" id="modulesAccordion">
                    @foreach (var module in Model.Modules)
                    {
                        <div class="card mb-2">
                            <div class="card-header">
                                <strong>@module.Title</strong>
                                <small class="text-muted ms-2">@module.Lessons.Count lecciones</small>
                            </div>
                            <div class="card-body">
                                @if (module.Lessons != null && module.Lessons.Any())
                                {
                                    <ul class="list-group">
                                    @foreach (var lesson in module.Lessons)
                                    {
                                        <li class="list-group-item d-flex justify-content-between align-items-center">
                                            <div>
                                                <strong>@lesson.Title</strong>
                                                <div class="text-muted">@lesson.Content</div>
                                            </div>
                                            <div>
                                                <a asp-controller="Course" asp-action="Lesson" asp-route-id="@lesson.Id" class="btn btn-sm btn-secondary me-2">Ver</a>
                                                @if (User.IsInRole("Admin"))
                                                {
                                                    <a asp-controller="AdminLesson" asp-action="Edit" asp-route-id="@lesson.Id" class="btn btn-sm btn-primary">Editar</a>
                                                }
                                            </div>
                                        </li>
                                    }
                                    </ul>
                                }
                                else
                                {
                                    <div class="text-muted">No hay lecciones en este módulo.</div>
                                }
                            </div>
                        </div>
                    }
                    </div>
                }
                else
                {
                    <div class="text-muted">No hay módulos en este curso.</div>
                }
            </div>
        </div>

    </div>
</section>
