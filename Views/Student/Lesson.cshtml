@model RoboticCoders.ViewModels.Student.StudentLessonViewModel

<div class="container-fluid">
    <div class="row">
        <aside class="col-md-3 border-end" style="min-height:80vh; background:#f8f9fa;">
            <div class="p-3">
                <h5 class="mb-3">@Model.Course?.Title</h5>

                <div class="d-flex align-items-center mb-3">
                    <div class="me-2">
                        <div class="rounded-circle bg-light" style="width:56px;height:56px;display:flex;align-items:center;justify-content:center;border:2px solid #eee;">
                            <strong>@Model.ProgressPercent% </strong>
                        </div>
                    </div>
                    <div>
                        <small class="text-muted">Progreso</small>
                        <div>@Model.CompletedLessonIds.Count / @Model.Modules.SelectMany(m=>m.Lessons).Count() lecciones</div>
                    </div>
                </div>

                <nav class="lesson-nav">
                    @foreach (var module in Model.Modules)
                    {
                        <div class="mb-2">
                            <strong>@module.Title</strong>
                            <ul class="list-unstyled ms-2">
                                @foreach (var lesson in module.Lessons.OrderBy(l=>l.Id))
                                {
                                    var completed = Model.CompletedLessonIds.Contains(lesson.Id);
                                    <li class="py-1">
                                        <a class="text-decoration-none @(lesson.Id == Model.Lesson.Id ? "fw-bold" : "")" href="/Student/Lesson/@lesson.Id">
                                            @if (completed)
                                            {
                                                <span class="text-success me-2">✓</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted me-2">○</span>
                                            }
                                            @lesson.Title
                                        </a>
                                    </li>
                                }
                            </ul>
                        </div>
                    }
                </nav>
            </div>
        </aside>

        <main class="col-md-9 p-4">
            <div class="d-flex justify-content-between align-items-start mb-3">
                <div>
                    <h2>@Model.Lesson.Title</h2>
                    <small class="text-muted">@Model.Course?.Title</small>
                </div>
                <div>
                    <form asp-controller="Student" asp-action="CompleteLesson" method="post" class="m-0">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="lessonId" value="@Model.Lesson.Id" />
                        <input type="hidden" name="nextLessonId" value="@(Model.NextLessonId ?? 0)" />
                        <button class="btn btn-success me-2">✅ Marcar completada</button>
                    </form>
                    @if (Model.NextLessonId.HasValue)
                    {
                        <a class="btn btn-primary" href="/Student/Lesson/@Model.NextLessonId">Siguiente →</a>
                    }
                </div>
            </div>

            <div class="row">
                <div class="col-lg-8">
                    @if (!string.IsNullOrEmpty(Model.Lesson.VideoUrl))
                    {
                        <div class="ratio ratio-16x9 mb-3">
                            <iframe src="@Model.Lesson.VideoUrl" title="Video" allowfullscreen></iframe>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.Lesson.SlideUrl))
                    {
                        <div class="card mb-3">
                            <div class="card-body p-0">
                                <iframe src="@Model.Lesson.SlideUrl" width="100%" height="560" style="border:0;"></iframe>
                            </div>
                        </div>
                    }

                    <div class="card mb-3">
                        <div class="card-body">
                            @Html.Raw(Model.Lesson.Content)
                        </div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="card mb-3">
                        <div class="card-body">
                            <h5>Recursos</h5>
                            <p class="mb-0">Abrir o descargar diapositivas:</p>
                            @if (!string.IsNullOrEmpty(Model.Lesson.SlideUrl))
                            {
                                <div class="mt-2">
                                    <a href="@Model.Lesson.SlideUrl" target="_blank" class="btn btn-sm btn-secondary me-2">Abrir</a>
                                    <a href="@Model.Lesson.SlideUrl" download class="btn btn-sm btn-outline-secondary">Descargar</a>
                                </div>
                            }
                        </div>
                    </div>

                    <div class="card">
                        <div class="card-body">
                            <h6>Progreso del curso</h6>
                            <div class="progress" style="height:12px;">
                                <div class="progress-bar" role="progressbar" style="width:@Model.ProgressPercent%" aria-valuenow="@Model.ProgressPercent" aria-valuemin="0" aria-valuemax="100">@Model.ProgressPercent%</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>

<style>
.lesson-nav a { color: inherit; }
.lesson-nav a:hover { text-decoration: none; }
.lesson-nav strong { font-size: .95rem; }
@@media (max-width:767px) { aside.col-md-3{display:none;} }
</style>
